generator client {
  provider = "prisma-client-js"
  //output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role{
  USER
  ADMIN
}

model User{
  id String @id@default(uuid())
  email String @unique
  passwordHash String
  name String?
  role Role @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  //refresh
  refreshTokens RefreshToken[]
  emailGrups EmailGrup[]
}

model RefreshToken {
  id String @id@default(uuid())
  userId String 
  token String @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model EmailGrup {
  id String @id@default(uuid())
  userId String
  emails String[]
  template String
  createdAt DateTime @default(now())
  sendTime DateTime
  sended Boolean @default(false) 

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}